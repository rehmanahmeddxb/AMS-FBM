<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="FbmWebApp.MainPage"
    BackgroundColor="White">
    <Grid>
        <WebView
            x:Name="MainWebView"
            IsVisible="False"
            Source="https://rehmanahmed.pythonanywhere.com/login?next=%2F"
            Navigated="OnNavigated" />
        <VerticalStackLayout
            x:Name="LoadingLayout"
            IsVisible="True"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Spacing="10">
            <ActivityIndicator
                IsRunning="True"
                Color="#2196F3"
                WidthRequest="50"
                HeightRequest="50" />
            <Label
                Text="Loading..."
                HorizontalOptions="Center" />
        </VerticalStackLayout>
        <VerticalStackLayout
            x:Name="ErrorLayout"
            IsVisible="False"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Spacing="15">
            <Label
                Text="Connection Issue"
                FontSize="24"
                HorizontalTextAlignment="Center"
                FontAttributes="Bold" />
            <Button
                Text="Retry"
                Clicked="OnRetryClicked"
                BackgroundColor="#2196F3"
                TextColor="White" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>